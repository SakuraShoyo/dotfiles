case-indicator {
    spacing:    0;
    text-color: @normal-text-color;
}

entry {
    spacing:    0;
    text-color: @normal-text-color;
}
prompt {
    spacing:    0;
    text-color: @normal-text-color;
}
inputbar {
    children:   [ prompt,textbox-prompt-colon,entry,case-indicator ];
}
textbox-prompt-colon {
    expand:     false;
    str:        ":";
    margin:     0px 0.3em 0em 0em ;
    text-color: @normal-text-color;
}
